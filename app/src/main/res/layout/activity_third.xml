<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@drawable/background_gradient"
  android:padding="16dp">

  <!-- Campo de entrada para o nome da matéria com padding e fundo cinza claro -->
  <EditText
    android:id="@+id/input_materia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nome da matéria:"
    android:background="@drawable/edittext_border"
    android:padding="12dp"
    android:textColor="#FFFFFF"
    android:textColorHint="#BBBBBB"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="78dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="16dp">

    <TextView
      android:id="@+id/media_label_top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Média:"
      android:textSize="18sp"
      android:textColor="#FFFFFF"
      android:gravity="center" />

    <TextView
      android:id="@+id/media_label_bottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0/10"
      android:textSize="18sp"
      android:textColor="#FFFFFF"
      android:gravity="center" />
  </LinearLayout>

  <!-- Linha horizontal com a média e o botão ao lado direito -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end|center_vertical"
    android:layout_marginBottom="16dp">

    <TextView
      android:id="@+id/media_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Atividades Avaliativas:"
      android:textSize="18sp"
      android:textColor="#FFFFFF"
      android:gravity="start|center_vertical" />

    <Button

      android:text="Editar peso"
      android:background="@drawable/rounded_button"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:textColor="#FFFFFF"
      android:layout_marginRight="7dp"/>

    <Button


      android:text="+"
      android:background="@drawable/rounded_button"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:textColor="#FFFFFF"
      android:padding="8dp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_button"
    android:padding="8dp"
    android:gravity="end|center_vertical">

    <!-- Texto do botão principal -->

    <!-- Botão de nota -->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingEnd="16dp"
      android:text="Critério 1"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      android:layout_marginRight="90dp"/>

    <Button
      android:id="@+id/note_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0 / 10"
      android:textColor="#FFFFFF"
      android:background="@drawable/button_background"
      android:layout_marginEnd="7dp"/>

    <!-- Botão de calendário -->
    <Button
      android:id="@+id/calendar_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/button_background"
      android:drawableStart="@drawable/iconcalendar"
      android:text="Calendário"
      android:textColor="#FFFFFF"/>
  </LinearLayout>




</LinearLayout>
